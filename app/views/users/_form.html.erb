
<%= form_with model: @user, local: true do |f| %>
<div>
  <%= f.label :name%>
</div>
<div>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :age%>
</div>
<div>
  <%= f.text_field :age %>
</div>
<div>
  <%= f.label :profile %>
</div>
<div>
  <%= f.text_area :profile %>
</div>
<div>
  <%= f.label :email %>
</div>
<div>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :password %>
</div>
<div>
  <%= f.password_field :password %>
</div>
<%= f.submit nil %>

<% end %>
